@model ProyectoDSWToolify.Models.ViewModels.ProductosViewModel
@{
    ViewBag.Title = "Productos";
}
<div class="container-xl top--10">
    <div class="mb-4 mb-md-5">
        <h1 class="display-5 fw-bold text-dark mb-3">Nuestros Productos</h1>
        <p class="fs-5 text-secondary">Descubre nuestra selección completa de herramientas y equipos profesionales</p>
    </div>

    <div class="row g-4">
        <!-- Sidebar Categorías y filtros -->
        <aside class="col-md-3">
            <form id="filtrosForm" method="get" asp-controller="Cliente" asp-action="Producto">
                <div class="p-3 border rounded bg-light shadow-sm">
                    <h5 class="mb-3 text-uppercase" style="color: #576eaa;">
                        <i class="fas fa-list me-2"></i>Categorías
                    </h5>

                    @foreach (var cat in Model.Categorias)
                    {
                        var isChecked = Model.IdCategoriasSeleccionadas.Contains(cat.idCategoria);
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" name="categorias" value="@cat.idCategoria"
                                   id="cat-@cat.idCategoria" @(isChecked ? "checked" : "") onchange="this.form.submit()" />
                            <label class="form-check-label" for="cat-@cat.idCategoria">
                                <i class="fas fa-tag me-1 text-secondary"></i>@cat.descripcion
                            </label>
                        </div>
                    }

                    <hr />
                    <h5 class="mb-3 text-uppercase" style="color: #576eaa;">
                        <i class="fas fa-sort me-2"></i>Ordenar por precio
                    </h5>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="orden" id="precioAsc" value="asc"
                        @(Model.OrdenPrecio == "asc" ? "checked" : "") onchange="this.form.submit()" />
                        <label class="form-check-label" for="precioAsc">Precio: menor a mayor</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="orden" id="precioDesc" value="desc"
                        @(Model.OrdenPrecio == "desc" ? "checked" : "") onchange="this.form.submit()" />
                        <label class="form-check-label" for="precioDesc">Precio: mayor a menor</label>
                    </div>

                    <!-- Botón resetear filtros (solo si hay filtros activos) -->
                    @if (Model.IdCategoriasSeleccionadas.Any() || Model.OrdenPrecio != "asc")
                    {
                        <div class="mt-3 d-grid">
                            <a href="@Url.Action("Producto", "Cliente")" class="btn btn-outline-danger">
                                Resetear filtros
                            </a>
                        </div>
                    }
                </div>
            </form>
        </aside>

        <!-- Productos -->
        <section class="col-md-9">
            @if (!Model.Productos.Any())
            {
                <div class="text-center text-muted py-5 border rounded">
                    <p class="mb-0 fs-5"><i class="fas fa-box-open me-2"></i>No hay productos para mostrar.</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var producto in Model.Productos)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow rounded">
                                @if (!string.IsNullOrEmpty(producto.imagen))
                                {
                                    <img src="@producto.imagen" class="card-img-top" style="height: 200px; object-fit: cover;" onerror="this.onerror=null;this.src='/assets/no-imagen.jpg';" />
                                }
                                else
                                {
                                    <img src="@Url.Content("~/assets/productos/P" + producto.idProducto + ".jpg")"
                                         class="card-img-top"
                                         style="height: 200px; object-fit: cover;"
                                         onerror="this.onerror=null;this.src='/assets/no-imagen.jpg';" />
                                }

                                <div class="card-body d-flex flex-column">
                                    <span class="badge bg-light text-secondary mb-2">@producto.categoria.descripcion</span>
                                    @if (producto.stock == 0)
                                    {
                                        <span class="badge bg-danger">Agotado</span>
                                    }

                                    <h5 class="fw-bold">@producto.nombre</h5>
                                    <p class="text-muted" style="overflow: hidden; -webkit-line-clamp: 2; display: -webkit-box; -webkit-box-orient: vertical;">
                                        @producto.descripcion
                                    </p>
                                    <div class="fs-4 fw-bold titulos-Primary mb-3">
                                        S/. @producto.precio.ToString("N2")
                                    </div>

                                    <div class="d-flex gap-2">
                                        <a href="#" class="btn btn-outline-secondary d-flex flex-column justify-content-center align-items-center btn-sm flex-fill"
                                           data-id="@producto.idProducto"
                                           data-bs-toggle="modal"
                                           data-bs-target="#productoModal"
                                           onclick="cargarDetallesProducto(@producto.idProducto)">
                                            <i class="fas fa-eye me-1"></i> Detalles
                                        </a>

                                        <button class="btn btn-primary-custom d-flex align-items-center justify-content-center btn-sm flex-fill"
                                        @(producto.stock == 0 ? "disabled" : "")
                                                data-id="@producto.idProducto"
                                                onclick="agregarAlCarrito(this)">
                                            <i class="fas fa-shopping-cart me-1"></i> Al carrito
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Paginación -->
                <nav class="mt-4">
                    <ul class="pagination pagination-lg justify-content-center">

                        <li class="page-item @(Model.PaginaActual == 1 ? "disabled" : "")">
                            <form method="get" asp-controller="Cliente" asp-action="Producto" style="display: inline;">
                                @foreach (var idCat in Model.IdCategoriasSeleccionadas)
                                {
                                    <input type="hidden" name="categorias" value="@idCat" />
                                }
                                <input type="hidden" name="orden" value="@Model.OrdenPrecio" />
                                <input type="hidden" name="pagina" value="@(Model.PaginaActual - 1)" />
                                <button type="submit" class="page-link" @(Model.PaginaActual == 1 ? "disabled" : "") aria-label="Anterior">
                                    &laquo;
                                </button>
                            </form>
                        </li>

                        @for (int i = 1; i <= Model.TotalPaginas; i++)
                        {
                            <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                                <form method="get" asp-controller="Cliente" asp-action="Producto" style="display: inline;">
                                    @foreach (var idCat in Model.IdCategoriasSeleccionadas)
                                    {
                                        <input type="hidden" name="categorias" value="@idCat" />
                                    }
                                    <input type="hidden" name="orden" value="@Model.OrdenPrecio" />
                                    <input type="hidden" name="pagina" value="@i" />
                                    <button type="submit" class="page-link">@i</button>
                                </form>
                            </li>
                        }

                        <li class="page-item @(Model.PaginaActual == Model.TotalPaginas ? "disabled" : "")">
                            <form method="get" asp-controller="Cliente" asp-action="Producto" style="display: inline;">
                                @foreach (var idCat in Model.IdCategoriasSeleccionadas)
                                {
                                    <input type="hidden" name="categorias" value="@idCat" />
                                }
                                <input type="hidden" name="orden" value="@Model.OrdenPrecio" />
                                <input type="hidden" name="pagina" value="@(Model.PaginaActual + 1)" />
                                <button type="submit" class="page-link" @(Model.PaginaActual == Model.TotalPaginas ? "disabled" : "") aria-label="Siguiente">
                                    &raquo;
                                </button>
                            </form>
                        </li>

                    </ul>
                </nav>
            }
        </section>
    </div>

    <!-- Modal producto (igual que antes) -->
    <div class="modal fade" id="productoModal" tabindex="-1" aria-labelledby="productoModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="productoModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body d-md-flex gap-4">
                    <div class="flex-shrink-0 mb-3 mb-md-0 text-center">
                        <img id="modalImagenProducto" alt="Imagen producto"
                             class="img-fluid rounded shadow-sm"
                             style="max-width: 300px;" />
                    </div>
                    <div class="flex-grow-1">
                        <p class="text-muted" id="modalDescripcionProducto"></p>
                        <p><strong>Categoría:</strong> <span id="modalCategoriaProducto"></span></p>
                        <p class="fs-4 fw-bold titulos-Primary">
                            S/. <span id="modalPrecioProducto"></span>
                        </p>

                        <div id="stockWarning" class="alert alert-warning p-2 text-center d-none">
                            Este producto está agotado.
                        </div>

                        <div class="d-flex align-items-center gap-2 mb-3">
                            <label for="inputCantidad" class="form-label mb-0">Cantidad:</label>
                            <input type="number" id="inputCantidad" class="form-control" min="1" value="1" style="width: 80px;" />
                        </div>

                        <button class="btn btn-primary-custom d-flex align-items-center justify-content-center w-100" id="btnAgregarCarrito">
                            <i class="fas fa-cart-plus me-2"></i>Agregar al carrito
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/producto.js"></script>
