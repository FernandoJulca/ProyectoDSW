@model ProyectoDSWToolify.Models.ViewModels.PerfilClienteViewModel

@{
    ViewBag.Title = "Mi Perfil";
}

<div class="container py-5 top--10">
    <h1 class="display-4 fw-bold titulos-Primary mb-4">Mi Perfil</h1>
    <p class="fs-5 text-muted mb-4">Consulta tus datos personales y el historial de tus compras en Toolify.</p>

    <div class="card mb-5 shadow-sm">
        <div class="card-body">
            <h4 class="card-title fw-semibold">@Model.Nombre</h4>
            <p class="card-text text-muted">@Model.Email</p>
        </div>
    </div>

    <h2 class="fw-bold mb-4">Historial de Compras</h2>

    @if (Model.HistorialVentas.Any())
    {
        <div class="accordion" id="accordionVentas">
            @for (int i = 0; i < Model.HistorialVentas.Count; i++)
            {
                var venta = Model.HistorialVentas[i];
                var collapseId = $"collapseVenta{i}";
                var headingId = $"headingVenta{i}";
                <div class="accordion-item shadow-sm mb-3 border-0">
                    <h2 class="accordion-header d-flex align-items-center" id="@headingId">
                        <button class="accordion-button collapsed fw-semibold bg-color-custom flex-grow-1" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                            Venta #@venta.idVenta — @venta.fecha.ToString("dd/MM/yyyy") — S/. @venta.total
                        </button>

                        @if (venta.estado == "T")
                        {
                            <button type="button" class="btn btn-warning btn-sm ms-3 shadow-sm fw-semibold d-flex align-items-center justify-content-center" data-bs-toggle="modal" data-bs-target="#mensajeModal@venta.idVenta" style="min-width:110px;">
                                <i class="fas fa-envelope me-2"></i> Mensajería
                            </button>

                        }
                    </h2>

                    @if (venta.estado == "T")
                    {
                        <div class="modal fade" id="mensajeModal@venta.idVenta" tabindex="-1" aria-labelledby="mensajeModalLabel@venta.idVenta" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" >
                                <div class="modal-content shadow rounded-4 border-0">
                                    <div class="modal-header bg-color-primary text-white rounded-top-4">
                                        <h5 class="modal-title fw-bold" id="mensajeModalLabel@venta.idVenta">
                                            Enviar Mensaje - Venta #@venta.idVenta
                                        </h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                    </div>
                                    <div class="modal-body bg-light">
                                        <form id="formMensaje@venta.idVenta">
                                            <div class="mb-3">
                                                <label for="mensajeText@venta.idVenta" class="form-label fw-semibold text-secondary">Mensaje</label>
                                                <textarea class="form-control shadow-sm" id="mensajeText@venta.idVenta" rows="5" placeholder="Escribe tu mensaje aquí..."></textarea>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer bg-light border-0">
                                        <button type="button" class="btn btn-outline-secondary fw-semibold" data-bs-dismiss="modal">Cerrar</button>
                                        <button type="button" class="btn btn-primary fw-semibold" onclick="enviarMensaje(@venta.idVenta)">Enviar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#accordionVentas">
                        <div class="accordion-body">
                            <p><strong>Estado:</strong> @venta.estado</p>
                            <p><strong>Tipo:</strong> @(venta.tipoVenta == "P" ? "Presencial" : "Remota")</p>

                            @if (venta.Detalles != null && venta.Detalles.Any())
                            {
                                <table class="table table-bordered table-hover mt-3">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Producto</th>
                                            <th>Cantidad</th>
                                            <th>Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in venta.Detalles)
                                        {
                                            <tr>
                                                <td>@item.producto.nombre</td>
                                                <td>@item.cantidad</td>
                                                <td>S/. @item.subTotal</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p class="text-muted">No hay detalles de productos para esta venta.</p>
                            }
                            <a asp-controller="Cliente" asp-action="DescargarVentaPdf"
                               asp-route-idVenta="@venta.idVenta"
                               asp-route-idCliente="@Model.idCliente"
                               target="_blank" class="btn btn-primary mt-3">
                                Descargar comprobante PDF
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No tienes compras registradas.
        </div>
    }

</div>
